<% content_for :title do %>
  <%=t :'devise.common.sign_in' %> Â· <%=t :title %>
<% end %>

<% content_for :banner do %>
  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="secondary intro-box action">
      <div class="intro-box-wrapper clearfix">
        <p class="desc"><%=t :'devise.labels.signin_blurb' %></p>
        <%= link_to t('devise.registrations.link'), new_registration_path(resource_name), :class => 'btn btn-alt' %>
      </div>
    </div>
  <% end %>
  <div class="primary">
    <h1 id="summary"><%=t :'devise.common.sign_in' %></h1>
  </div>
<% end %>

<div class="content-wrapper">
  <div class="primary">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <%= f.error_messages %>
      <fieldset class="field-group">
        <div class="field field-block">
          <%= f.label :email, t(:'devise.labels.email') %>
          <%= f.text_field :email %>
        </div>
        <div class="field field-block">
          <%= f.label :password, I18n.t(:'devise.labels.password') %>
          <%= f.password_field :password %>
          <% if devise_mapping.recoverable? && controller_name != 'passwords' %>
            <%= link_to t('devise.passwords.link'), new_password_path(resource_name) %><br />
          <% end %>
        </div>
      </fieldset>
      <div class="button-group">
        <div>
          <% if devise_mapping.rememberable? %>
            <%= f.check_box :remember_me %> <%= f.label :remember_me, t(:'devise.labels.remember_me') %>
          <% end %>
        </div>
        <%= f.submit t(:'devise.common.sign_in'), :class => 'btn' %>
      </div>
    <% end %>
  </div>
</div>
